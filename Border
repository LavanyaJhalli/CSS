p.dotted{border-style:dotted;border-color:crimson;}
p.dashed{border-style:dashed;border-color:blue;}
p.mix{border-style:dotted dashed wavy double;border-color:green;}
p.one{border-style:solid;border-color:red green blue yellow;}
p.two{border:15px dotted pink;}
p.three{border:2px solid indigo; border-radius:5px}
div{border:1px solid orange;margin-top:100px;margin-bottom:100px;margin-left:150px;margin-right:150px;
